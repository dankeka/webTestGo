| {{template "default" .}}
| {{define "title"}}Пользователь{{end}}


| {{define "content"}}
|   {{if and .IsLogin .Access}}
section.userProfil.row
  div.userNameAndAvatar.col-12.col-lg-6
    div.UserAvatarDiv
      img(src="/static/avatars/{{.User.Avatar}}" alt="аватарка" class="rounded-circle")
    div.UserNameDiv
      h2 {{.User.Name}}
      | {{if ne .User.Age.Int32 0}}
      span {{.User.Age.Int32}}
      | {{end}}

  div.userInfo.col-12.col-lg-6
    div.settings
      div.dropdown
        button(class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#dropSettingsUser" aria-expanded="false" aria-controls="dropSettingsUser") Настройки
        div(class="collapse" id="dropSettingsUser")
          form(method="POST" action="/user/updateSettings")
            div(class="card card-body") 
              div.mb-2
                label(for="userAge" class="form-label") Возвраст
                input(id="userAge" name="userAge" class="form-control form-control-sm")
              | {{if eq .User.Email.String ""}}
              div.mb-2
                label(for="userSite" class="form-label") Горад
                input(id="userSite" name="userSite" class="form-control form-control-sm")
              div.mb-3
                label(for="userEmail" class="form-label") Email
                input(id="userEmail" name="userEmail" class="form-control form-control-sm")
              | {{else}}
              div.mb-3
                label(for="userSite" class="form-label") Горад
                input(id="userSite" name="userSite" class="form-control form-control-sm")
              input(type="hidden" name="userEmail" value="")
              | {{end}}
              div
                button(type="submit" class="btn btn-outline-success") Сохнранить

|   {{else}}
h1 
  pre. 
    У вас нету ака =( 
    <a href="/register/get">Создайте</a> акк или <a href="/login/get">войдите</a>
|   {{end}}
| {{end}}

